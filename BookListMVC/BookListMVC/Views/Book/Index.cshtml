@model IEnumerable<BookListMVC.Model.Book>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    .table {
        width: 80%;
    }
</style>

<div class="container">
    <h3>List of Books</h3>
    <table class="table table-bordered table-dark table-hover">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Book Name</th>
                <th scope="col">Author Name</th>
                <th scope="col">Total Pages</th>
                <th scope="col">Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var book in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(x => book.BookId)</td>
                    <td>@Html.DisplayFor(x => book.Name)</td>
                    <td>@Html.DisplayFor(x => book.Author)</td>
                    <td>@Html.DisplayFor(x => book.Pages)</td>
                    <td>
                        <a class="btn-sm btn-danger" asp-action="Delete" asp-route-id="@book.BookId" onclick="return confirm('Are you sure to delete?')">Delete</a>
                        <a class="btn-sm btn-light" asp-action="Edit" asp-route-id="@book.BookId">Edit</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<div class="col-12 border p-3">
    <table id="DT_load" class="table table-striped table-bordered" style="width:100%">
        <thead>
            <tr>
                <th>Book Name</th>
                <th>Author</th>
                <th>Pages</th>
                <th></th>
            </tr>
        </thead>
    </table>
</div>

